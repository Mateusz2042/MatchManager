@model IEnumerable<MatchManager.Models.Team>

@{
    ViewData["Title"] = "GetAllTeams";
}

<h2>All Teams</h2>
<p>
    <button onclick="window.location.href='/Team/CreateTeam'" class="waves-effect waves-light btn pulse"><i class="material-icons right">create</i>Create Team</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameTeam)
            </th>
            <th>
                FirstMember
            </th>
            <th>
                SecondMember
            </th>
            <th>
                Edit
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMember.FirstName) @Html.DisplayFor(modelItem => item.FirstMember.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondMember.FirstName) @Html.DisplayFor(modelItem => item.SecondMember.LastName)
            </td>
            <td><button type="button" onclick="location.href='@Url.Action("EditTeam", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">edit</i></button></td>
            <td><button type="button" onclick="location.href='@Url.Action("DetailsTeam", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">details</i></button></td>
            <td><button type="button" onclick="location.href='@Url.Action("DeleteTeam", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></button></td>
        </tr>
}
    </tbody>
</table>
