@model MatchManager.Models.Player

@{
    ViewData["Title"] = "EditPlayer";
}

<h2>Edit Player</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NickName" class="control-label"></label>
                <input asp-for="NickName" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <select asp-for="Sex" id="Sex" class="form-control">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a id="Save" class="waves-effect waves-light btn blue"><i class="material-icons right">edit</i>Edit</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllPlayers">Back to List</a>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $("#Save").click(function () {
            var player = new Object();
            player.id = $('#Id').val();
            player.firstName = $('#FirstName').val();
            player.lastName = $('#LastName').val();
            player.nickName = $('#NickName').val();
            player.age = $('#Age').val();
            player.sex = $('#Sex').val();

            $.ajax({
                url: 'http://localhost:53766/api/Player/',
                type: 'PUT',
                dataType: 'json',
                data: player,
                success: function (data, textStatus, xhr) {
                    console.log(data);
                    window.location.href = 'GetAllPlayers/';
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Error in Operation');
                }
            });
        });
    });

</script>